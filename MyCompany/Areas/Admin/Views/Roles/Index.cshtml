@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in Model)
    {
<tr>
    <td><p>@role.Name</p></td>
    <td>
        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>}
</table>
<a class="btn btn-success" asp-action="Create">Добавить роль</a>
<a class="btn btn-warning div-box" asp-action="UserList">Список пользователей</a>